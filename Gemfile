# Ullmannite Gemfile
# Wednesday, 9 September, 2015
source "https://rubygems.org"

# Ruby version
ruby '2.2.2'

# Camping is my microframework of choice
gem 'camping', '~> 2.1.532'

# We'll use Puma rather than Camping's default, WEBrick
gem 'puma', '~> 2.14.0'

# SQLite3 is used to store all of the data (in ~/.camping.db by default)
gem 'sqlite3', '~> 1.3.10'

# ActiveRecord is my ORM of choice
gem 'activerecord'
